        {
            "name": "ngnx::HOME",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "ngnx::Test",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:9876/debug.html",
            "port": 9222,
            "sourceMaps": true,
            "trace": false,
            "webRoot": "${workspaceRoot}"
        }
    ]
